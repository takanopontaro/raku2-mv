{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": { "*": ["*", "./typings/*"] },
    "typeRoots": ["./node_modules/@types", "./typings"],
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
